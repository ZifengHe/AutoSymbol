<Window x:Class="AutoBlockMouse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoBlockMouse"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="180" PreviewLostKeyboardFocus="Window_PreviewLostKeyboardFocus">
    <StackPanel Orientation="Vertical">
        <ComboBox Name="cb" Margin="10">
            <ComboBoxItem>5 minutes</ComboBoxItem>
            <ComboBoxItem>1 minutes 10 second</ComboBoxItem>
        </ComboBox>
      
        <Button Margin="10" Click="StartClicked">Start Mouse Block</Button>
        <Button Margin="10" Click="StopClicked">Stop Mouse Block</Button>
        <Grid Name="bg" Height="300" Background="Green"></Grid>
    </StackPanel>
</Window>
